{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["dist"],
  "rules": {
    "@typescript-eslint/no-empty-function": "off",
    "no-case-declarations": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
